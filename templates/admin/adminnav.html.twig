<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.10/css/mdb.min.css" rel="stylesheet">

    <!-- Mobile site -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font family Karla -->
    <link href="https://fonts.googleapis.com/css?family=Karla&display=swap" rel="stylesheet">
    <!-- CSS -->
    <link href="{{ asset('uploads/css/header.css') }}" rel="stylesheet">
    <style>
        html, body {
            font-family: 'Karla', sans-serif;
            width: 96%;
        }
        .sidebar-sticky{
            height: 100vh;
        }
    </style>

</head>
<body>
<div class="row">
        <nav class="col-md-2 d-none d-md-block bg-light sidebar">
            <div class="sidebar-sticky">
                <br>
                <br>
                <br>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path ('adminindex') }}">
                            <span data-feather="home"></span>
                            Dashboard <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path ('user_index') }}">
                            <span data-feather="file"></span>
                            Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path ('answer_index') }}">
                            <span data-feather="shopping-cart"></span>
                            Answers
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path ('choice_index') }}">
                            <span data-feather="users"></span>
                            Choice's
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href=""{{ path ('answer_index') }}"">
                            <span data-feather="bar-chart-2"></span>
                            Answers
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path ('survey_index') }}">
                            <span data-feather="layers"></span>
                            Surveys
                        </a>
                    </li>
                </ul>
                </ul>
            </div>
        </nav>



{% block body %}{% endblock %}
{% block javascripts %}{% endblock %}
<!-- JQuery -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<!-- Bootstrap tooltips -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
<!-- Bootstrap core JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
<!-- MDB core JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.10/js/mdb.min.js"></script>
</body>
</html>
